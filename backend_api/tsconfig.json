{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2021"],
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
